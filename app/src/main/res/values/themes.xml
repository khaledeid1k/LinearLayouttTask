<resources>
    <!-- Base application theme. -->
    <style name="Theme.LinerLayoutTask" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ReviewText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textInFrame</item>

    </style>

    <style name="PublicText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/job</item>
        <item name="android:textSize">@dimen/textInFrame</item>

    </style>

    <style name="PublicText.nationality" parent="Widget.AppCompat.TextView" />

    <style name="PublicText.job" parent="Widget.AppCompat.TextView">
        <item name="android:layout_weight">1</item>
    </style>



</resources>